@model EjemploColegioMVC.Models.Estudiante

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h2>@Model.Nombre @Model.Apellido</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <!--Datos generales-->
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Apellido)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Carnet)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Carnet)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Tutor.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Tutor.Nombre)
                    </dd>

                </dl>
            </div>
            <div class="col-9">
                <!--Tabla de calificaciones-->
                <table class="table">
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>NF</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Calificaciones)
                    {
                        <tr>
                            <td>@item.Asignatura.Codigo</td>
                            <td>@item.Asignatura.Nombre</td>
                            <td>@(item.Acumulado+item.Examen)</td>
                            <td><a href="@Url.Action("Details","Calificacions",new {Id=item.Id})">Ver detalles</a></td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h2>Calificaciones del estudiante</h2>


